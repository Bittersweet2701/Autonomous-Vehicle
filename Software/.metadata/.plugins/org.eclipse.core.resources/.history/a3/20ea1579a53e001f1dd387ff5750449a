/*********************
 *      INCLUDES
 *********************/
#include "Buzzer_System.h"
#include "stdlib.h"

/*********************
 *      DEFINES
 *********************/
#define DUTY_LONG_SOUND 50
#define DUTY_SHORT_SOUND 25

/**********************
 *   GLOBAL FUNCTIONS
 **********************/
void BUZZER_SYSTEM_Set_Sound(BUZZER_System_t * const BUZZER_System_p)
{
	if (LIGHTING_System_p->light_illuminated_mode == LIGHT_ILLUMINATED)
		HAL_GPIO_WritePin(LIGHTING_System_p->GPIO_p, LIGHTING_System_p->GPIO_LIGHTING_Pin, GPIO_PIN_SET);
	else if (LIGHTING_System_p->light_illuminated_mode == LIGHT_NON_ILLUMINATED)
		HAL_GPIO_WritePin(LIGHTING_System_p->GPIO_p, LIGHTING_System_p->GPIO_LIGHTING_Pin, GPIO_PIN_RESET);
	switch (LIGHTING_System_p->timChannel)
	{
	case TIM_CHANNEL_1:
		LIGHTING_System_p->timer_p->Instance->CCR1 = DUTY_CYCLE_INDICATING;
		break;
	case TIM_CHANNEL_2:
		LIGHTING_System_p->timer_p->Instance->CCR2 = DUTY_CYCLE_INDICATING;
		break;
	case TIM_CHANNEL_3:
		LIGHTING_System_p->timer_p->Instance->CCR3 = DUTY_CYCLE_INDICATING;
		break;
	case TIM_CHANNEL_4:
		LIGHTING_System_p->timer_p->Instance->CCR4 = DUTY_CYCLE_INDICATING;
		break;
	}
}

void BUZZER_SYSTEM_Init(BUZZER_System_t * const BUZZER_System_p,
						TIM_HandleTypeDef * timer_p,
						uint32_t timChannel,
						void (* set_sound_func)(BUZZER_System_t * const BUZZER_System_p))
{
	BUZZER_System_p->timer_p = timer_p;
	BUZZER_System_p->timChannel = timChannel;
	BUZZER_System_p->sound_duration = LONG_SOUND;
	HAL_TIM_PWM_Start(LIGHTING_System_p->timer_p, LIGHTING_System_p->timChannel);
	BUZZER_SYSTEM_Set_Sound(BUZZER_System_p);
}

BUZZER_System_t * BUZZER_SYSTEM_Create(TIM_HandleTypeDef * timer_p,
										uint32_t timChannel,
										SOUND_Duration_t sound_duration)
{
	BUZZER_System_t * BUZZER_System_p = malloc(sizeof(BUZZER_System_t));
	if (BUZZER_System_p != NULL)
	{
		BUZZER_SYSTEM_Init(BUZZER_System_p, timer_p, timChannel, BUZZER_SYSTEM_Set_Sound);
	}
	return BUZZER_System_p;
}

void BUZZER_SYSTEM_Destroy(BUZZER_System_t * const BUZZER_System_p)
{
	free(BUZZER_System_p);
}
